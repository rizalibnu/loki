{
  "name": "@loki/example-react",
  "version": "0.20.1",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-motion": "^0.5.2",
    "react-scripts": "3.4.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "pretest-ci": "build-storybook",
    "test-ci": "loki --requireReference --reactUri file:./storybook-static",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "loki-update": "rm .loki/difference/* .loki/current/*; yarn loki update; yarn loki-report-json && cp -r .loki/report.json .loki/reference-report.json && rm .loki/report.json",
    "loki-test": "rm .loki/difference/* .loki/current/*; yarn loki test; yarn loki-test-report; yarn loki-open-report",
    "loki-open-report": "open .loki/report.html",
    "loki-report-json": "node .loki/loki-generate-visual-json-report.js",
    "loki-test-report": "yarn loki-report-json && reg-cli --from .loki/report.json --report .loki/report.html",
    "loki-approve": "yarn loki approve && rm .loki/reference-report.json && cp -r .loki/report.json .loki/reference-report.json"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.13",
    "@storybook/addon-links": "^5.3.13",
    "@storybook/addons": "^5.3.13",
    "@storybook/preset-create-react-app": "^1.5.2",
    "@storybook/react": "^5.3.13",
    "fs": "^0.0.1-security",
    "loki": "^0.20.1",
    "path": "^0.12.7",
    "reg-cli": "^0.16.0",
    "util": "^0.12.2"
  },
  "loki": {
    "chromeSelector": ".wrapper > *, #root > *",
    "diffingEngine": "gm",
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768
      },
      "chrome.iphone7": {
        "target": "chrome.docker",
        "preset": "iPhone 7"
      },
      "chrome.a4": {
        "target": "chrome.docker",
        "preset": "A4 Paper"
      }
    },
    "fetchFailIgnore": "localhost:1234/get"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
